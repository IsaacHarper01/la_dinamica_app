#:kivy 2.0.0

<Navegar>:
    home:
    scanner:

<home>:
    name: '1'
    GridLayout:
        cols:1
        size_hint: 1,.4
        spacing: "15dp"
        pos_hint: {"center_x":0.5,"center_y":.7}
        Image:
            source: "data/f=ma18.png"
            size_hint: 1,1
            pos_hint: { "center_x": .5}
        Button:
            text: "Escanear"
            on_release: app.root.current = '2'

        
<scanner>:
    #:import ZBarCam kivy_garden.zbarcam.ZBarCam
    name: '2'
    GridLayout:
        cols:1
        pos_hint: {"center_x":0.5,"center_y":0.5}
        spacing: "10dp"
        ZBarCam:
            id:qrcodecam
            play: False
        Button:
            id:start
            text: "Start"
            on_press: root.start()
        Label:
            id: qr_label
            text: "QR info will be shown here"