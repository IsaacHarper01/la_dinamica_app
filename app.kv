#:kivy 2.0.0

<Navegar>:
    main_screen:
    agregar_alumno:
    reportes:
    escanear:
    buscar_alumno:
    reporte_de_asistencias:
    reporte_de_ingresos:
    pagos:

<main_screen>:
    name: '1'
    BoxLayout:
        size_hint: 1,.4
        spacing: "15dp"
        pos_hint: {"center_x":0.5,"center_y":.7}
        Image:
            source: "data/f=ma18.png"
            size_hint: 1,1
            pos_hint: { "center_x": .5}
    GridLayout:
        spacing: "15dp"
        size_hint: 0.8,.5
        pos_hint: {"center_x":0.5}
        cols:1
        Button:
            text: "Escanear"
            size_hint: .5,.1
            pos_hint: { "center_x": .5}
            on_release: app.root.current = '4'
        Button:
            text: "Agregar Alumno"
            size_hint: .5,.1
            pos_hint: { "center_x": .5 }
            on_release: app.root.current = '2'
        Button:
            text: "Buscar Alumno"
            size_hint: .5,.1
            pos_hint: { "center_x": .5 }
            on_release: app.root.current = '5'
        Button:
            text: "Reportes"
            size_hint: .5,.1
            pos_hint: { "center_x": .5 }
            on_release: app.root.current = '3'

<agregar_alumno>:
    name: '2'
    size_hint: .8,.8
    pos_hint: {"center_x": .5,"center_y":.5}
    GridLayout:
        cols:1
        spacing: "15dp"
        Label:
            text: "Nombre"
            size_hint: .8,.2
        TextInput:
            id: name_input
            multiline: False
            size_hint: 1,.4
        Label:
            text: "Apellidos"
            size_hint: .8,.2
        TextInput:
            id: last_name_input
            multiline: False
            size_hint: 1,.4
        Label:
            text: "Edad"
            size_hint: .8,.2
        TextInput:
            id: age_input
            multiline: False
            on_text_validate: root.edad_validate(self)
            size_hint: 1,.4
        Label:
            text: "Localidad"
            size_hint: .8,.2
        TextInput:
            id: address_input
            multiline: False
            on_text_validate: root.localidad_validate(self)
            size_hint: 1,.4
        Label:
            text: "Telefono"
            size_hint: .8,.2
        TextInput:
            id: phone_input
            multiline: False
            on_text_validate: root.phone_validate(self)
            size_hint: 1,.4
        Button:
            text: "Registrar"
            size_hint: .5,.5
            pos_hint: { "center_x": .5 }
            on_press: root.on_press_registro()

        Button:
            text: "Regresar"
            size_hint: .5,.5
            pos_hint: { "center_x": .5 }
            on_release: app.root.current = '1'

        Label:
            text: root.texto_registro 
            size_hint: .4,.3
            pos_hint: { "center_x": .5 }
            
<reportes>:
    name: '3'
    GridLayout:
        spacing: "20dp"
        cols:1
        size_hint: 0.8,.8
        pos_hint: {"center_x":.5,"center_y":.5}
        Button:
            text: "Reporte de asistencias"
            on_release: app.root.current = '6'
        Button:
            text: "Reporte de ingresos"
            on_release: app.root.current = '7'
        Button:
            text: "Regresar"
            on_release: app.root.current = '1'
        
<escanear>:
    #:import ZBarCam kivy_garden.zbarcam.ZBarCam
    name: '4'
    ZBarCam:
        id:qrcodecam
        play: False
    GridLayout:
        spacing: "15dp"
        cols:1
        size_hint: .8,.5
        pos_hint: {"center_x":.5}
        Label:
            id: qr_label
            text: "Información del alumno"
        Button:
            text: "Scan"
            on_press: root.on_enter()
        Button:
            text: "Marcar asistencia"
            disabled: root.buttons_desactived
            on_press: root.mark_present()
        Button:
            text: "Pagos"
            disabled: root.buttons_desactived
            on_release: app.root.current = '8'
        Button:
            text: "Regresar"
            on_release: app.root.current = '1'

<buscar_alumno>:
    name: '5'
    size_hint: .8, .9
    pos_hint: {"center_x":.5,"center_y":.5}
    Switch:
        on_active: root.on_switch_active(self)
        pos_hint: {"center_x":.9,"center_y":.98}
    GridLayout:
        spacing: "20dp"
        cols:1
        Label:
            text: "Numero de alumno"
        TextInput:
            id: search_id
            size_hint: 1,.6
            multiline: False
        Label:
            text: "Nombre"
        TextInput:
            id: search
            size_hint: 1,.6
            multiline: False
        Button:
            text: "Buscar"
            on_press: root.search_press()
        Button:
            text: "Marcar asistencia"
            on_press: root.mark_present()
            disabled: root.activate_buttons
        Button:
            text: "Reporte de asistencias"
            disabled: True
        Button:
            text: "Pagos"
            disabled: root.activate_buttons
            on_release: app.root.current = '8'
        Button:
            text: "Eliminar registro"
            on_press: root.delete_register()
            disabled: root.activate_delete
        Button:
            text: "Regresar"
            on_release: app.root.current = '1'
        Label:
            text: root.text_label
        
<reporte_de_asistencias>:
    name: '6'
    size_hint: 1,1
    BoxLayout:
        spacing: "10dp"
        orientation:"vertical"
        Label:
            size_hint: 1,.6
            text: root.text_label
        Label:
            size_hint: 1,.2
            text: "Fecha de inicio: día mes año (dd-mm-yyyy)"
        GridLayout:
            cols:3
            spacing: "10dp"
            size_hint: .9,.15
            pos_hint: {"center_x":.5}
            TextInput:
                id: day
                multiline: False
            TextInput:
                id: month
                multiline: False
            TextInput:
                id: year
                multiline: False
        Label:
            size_hint: 1,0.2
            text: "Fecha de cierre: día mes año (dd-mm-yyyy)"
        GridLayout:
            cols:3
            spacing: "10dp"
            size_hint: .9,.15
            pos_hint: {"center_x":.5}
            TextInput:
                id: day
                multiline: False
            TextInput:
                id: month
                multiline: False
            TextInput:
                id: year
                multiline: False
        Button:
            pos_hint: {"center_x":.5}
            size_hint: .9,.2
            text: "Generar"
        Button:
            pos_hint: {"center_x":.5}
            size_hint: .9,.2
            text: "Reporte diario"
            on_press: root.get_daily_income()
        Button:
            pos_hint: {"center_x":.5}
            size_hint: .9,.2
            text: "Reporte mensual"
            on_press: root.press_month()
        GridLayout:
            cols: 3
            size_hint: 0.9,0.9
            spacing: "10dp"
            pos_hint: {"center_x":.5}
            Button:
                text: "Enero"
                on_press: root.on_january()
